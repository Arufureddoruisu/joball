@model JobPortal.Models.ForgotPasswordMV
@{
    ViewBag.Title = "Forgot";
}


<section class="contact-section">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2 class="contact-title">Forgot Password</h2>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </div>
            <div class="col-lg-8">
                @using (Html.BeginForm("Forgot", "User", FormMethod.Post, new { @class = "form-contact", @novalidate = "novalidate" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col-sm-8">
                            <div class="form-group">
                                @Html.EditorFor(model => model.Email, new
                                {
                                    htmlAttributes = new
                                    {
                                        @class = "form-control valid",
                                        @type = "text",
                                        @name = "Email",
                                        @id = "Email",
                                        @placeholder = "Enter Registered Email Address",
                                        @onfocus = "this.placeholder = ''",
                                        @onblur = "this.placeholder = 'Enter Registered Email Address'",
                                    }
                                })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "success" })
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="form-group mt-3">
                                <input type="submit" value="Send Email" class="button boxed-btn" />
                                @Html.ActionLink("Back to Login", "Login", null, new { @class = "genric-btn link"})
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="col-lg-4">
                <div class="contact-info">
                    <div class="media contact-info">
                        <span class="contact-info__icon"><i class="ti-home"></i></span>
                        <div class="media-body">
                            <h3>A. C. Cortes Ave, Mandaue City</h3>
                            <p>6014 Cebu</p>
                        </div>
                    </div>
                    <div class="media">
                        <span class="contact-info__icon"><i class="ti-tablet"></i></span>
                        <div class="media-body">
                            <h3>+63 967 401 9891</h3>
                            <p>Mon to Fri 9am to 6pm</p>
                        </div>
                    </div>
                    <div class="media">
                        <span class="contact-info__icon"><i class="ti-email"></i></span>
                        <div class="media-body">
                            <h3>support@JobAll.com</h3>
                            <p>Send us your query anytime!</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
