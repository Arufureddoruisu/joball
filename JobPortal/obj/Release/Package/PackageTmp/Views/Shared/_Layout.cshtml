    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        h1, h2, h3, h4, h5, h6 {
            font-family: "Roboto", sans-serif;
            font-weight: bold;
        }

        .primary-color {
            background-color: #007bff; /* Example primary color */
        }

        .secondary-color {
            background-color: #ffc107; /* Example secondary color */
        }

        .container {
            flex: 1;
        }

        footer {
            width: 100%;
            background-color: #f8f9fa; /* Adjust background color as needed */
            padding: 20px 0; /* Adjust padding as needed */
            text-align: center;
        }

        .accent-color {
            color: #dc3545; /* Example accent color */
        }

        .header-area {
            background-color: #fff;
            padding: 15px 0;
        }

        .logo {
            float: left; /* Or use flexbox for logo positioning */
        }

        .main-menu {
            float: right; /* Or use flexbox for menu positioning */
        }

            .main-menu ul {
                list-style: none;
                margin: 0;
                padding: 0;
            }

            .main-menu li {
                display: inline-block;
                margin-right: 20px;
            }

            .main-menu a {
                text-decoration: none;
                color: #333;
            }
    </style>
</head>

<body>

    @{
        int usertypeid = 0;
        if (string.IsNullOrEmpty(Convert.ToString(Session["UserTypeID"])))
        {
            int.TryParse(Convert.ToString(Session["UserTypeID"]), out usertypeid);
        }
    }

    <!-- Preloader Start -->
    <div id="preloader-active">
        <div class="preloader d-flex align-items-center justify-content-center">
            <div class="preloader-inner position-relative">
                <div class="preloader-circle"></div>
                <div class="preloader-img pere-text">
                    <img src="~/Content/assets/img/logo/logo.png" alt="">
                </div>
            </div>
        </div>
    </div>
    <!-- Preloader Start -->
    <header>
        <!-- Header Start -->
        <div class="header-area header-transparrent">
            <div class="headder-top header-sticky">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-lg-3 col-md-2">
                            <!-- Logo -->
                            <div class="logo">
                                <a href="#"><img src="~/Content/assets/img/logo/logo.png" alt=""></a>
                            </div>
                        </div>
                        <div class="col-lg-9 col-md-9">
                            <div class="menu-wrapper">
                                <!-- Main-menu -->
                                <div class="main-menu">
                                    <nav class="d-none d-lg-block">
                                        <ul id="navigation">
                                            <li><a href="@Url.Action("Index", "Home")"><i class="fas fa-home"></i> Home</a></li>
                                            <li><a href="@Url.Action("About", "Home")"><i class="fas fa-info-circle"></i> About</a></li>
                                            <li><a href="@Url.Action("Contact", "Home")"><i class="fas fa-envelope"></i> Contact</a></li>

                                            @if (Session["usertypeid"] != null)
                                            {
                                                int userType = (int)Session["usertypeid"];
                                                if (userType == 3)
                                                {
                                                    <li><a href="@Url.Action("FilterJob", "Job")"><i class="fas fa-search"></i> Find A Job</a></li>
                                                }
                                                else if (userType == 2)
                                                {
                                                    <li><a href="@Url.Action("PostJob", "Job")"><i class="fas fa-briefcase"></i> Post Job</a></li>
                                                    <li><a href="@Url.Action("CompanyJobList", "Job")"><i class="fas fa-list"></i> All Posts</a></li>
                                                }
                                                else if (userType == 1)
                                                {
                                                    <li><a href="@Url.Action("AllUsers", "User")"><i class="fas fa-users"></i> All Users</a></li>
                                                    <li>
                                                        <a href="#"><i class="fas fa-cog"></i> Configure</a>
                                                        <ul class="submenu">
                                                            <li><a href="@Url.Action("Index", "JobCategoryTables")"><i class="fas fa-folder"></i> Job Categories</a></li>
                                                            <li><a href="@Url.Action("Index", "JobNatureTables")"><i class="fas fa-briefcase"></i> Job Natures</a></li>
                                                        </ul>
                                                    </li>
                                                    <li><a href="@Url.Action("AllCompanyPendingJob", "Job")"><i class="fas fa-table"></i> Manage All Job Postings</a></li>
                                                    <li><a href="@Url.Action("Index", "CompanyTables")"><i class="fas fa-building"></i> Companies</a></li>
                                                }
                                            }
                                            @if (Session["UserID"] == null)
                                            {
                                                <li><a href="@Url.Action("NewUser", "User")"><i class="fas fa-user-plus"></i> Register</a></li>
                                                <li><a href="@Url.Action("Login", "User")"><i class="fas fa-sign-in-alt"></i> Login</a></li>
                                            }
                                            else
                                            {
                                                <li><a href="@Url.Action("Logout", "User")"><i class="fas fa-sign-out-alt"></i> Sign out</a></li>
                                            }

                                        </ul>
                                    </nav>
                                </div>
                            </div>
                        </div>
                        <!-- Mobile Menu -->
                        <div class="col-12">
                            <div class="mobile_menu d-block d-lg-none"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Header End -->
    </header>
    <main class="container">
        @RenderBody()
    </main>
    <footer>
        <!-- Footer Start-->
        <!-- footer-bottom area -->
        <div class="footer-bottom-area footer-bg">
            <div class="container">
                <div class="footer-border">
                    <div class="row d-flex justify-content-between align-items-center">
                        <div class="col-xl-10 col-lg-10 ">
                            <div class="footer-copy-right">
                                <p>
                                    <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                                    Copyright &copy;
                                    <script>document.write(new Date().getFullYear());</script> All rights reserved  <i class="fa fa-heart" aria-hidden="true"></i> by <a>Job All "Get your dream Job!"</a>
                                    <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                                </p>
                            </div>
                        </div>
                        <div class="col-xl-2 col-lg-2">
                            <div class="footer-social f-right">
                                <a href="#"><i class="fab fa-facebook-f"></i></a>
                                <a href="#"><i class="fab fa-twitter"></i></a>
                                <a href="#"><i class="fas fa-globe"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Footer End-->
    </footer>

    <!-- JS here -->
    <!-- All JS Custom Plugins Link Here here -->
    <script src="~/Content/assets/js/vendor/modernizr-3.5.0.min.js"></script>
    <!-- Jquery, Popper, Bootstrap -->
    <script src="~/Content/assets/js/vendor/jquery-1.12.4.min.js"></script>
    <script src="~/Content/assets/js/popper.min.js"></script>
    <script src="~/Content/assets/js/bootstrap.min.js"></script>
    <!-- Jquery Mobile Menu -->
    <script src="~/Content/assets/js/jquery.slicknav.min.js"></script>

    <!-- Jquery Slick , Owl-Carousel Plugins -->
    <script src="~/Content/assets/js/owl.carousel.min.js"></script>
    <script src="~/Content/assets/js/slick.min.js"></script>
    <script src="~/Content/assets/js/price_rangs.js"></script>

    <!-- One Page, Animated-HeadLin -->
    <script src="~/Content/assets/js/wow.min.js"></script>
    <script src="~/Content/assets/js/animated.headline.js"></script>
    <script src="~/Content/assets/js/jquery.magnific-popup.js"></script>

    <!-- Scrollup, nice-select, sticky -->
